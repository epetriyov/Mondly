<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_bot_avatar"
        android:layout_width="71dp"
        android:layout_height="56dp" />

    <LinearLayout
        android:id="@+id/container_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bot_message"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingTop="13dp"
        android:paddingEnd="27dp"
        android:paddingBottom="13dp">

        <LinearLayout
            android:id="@+id/text_bot_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="21sp"
                tools:text="¿Qué desea?" />

            <TextView
                android:id="@+id/text_message_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/greyish_brown"
                android:textSize="17sp"
                tools:text="What would you like?" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loader_bot_message"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>